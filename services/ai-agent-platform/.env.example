# AI Agent Platform Configuration

# LLM Provider Configuration
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# LLM Settings
DEFAULT_LLM_PROVIDER=openai
DEFAULT_MODEL=gpt-4
LLM_TIMEOUT=60s
LLM_MAX_RETRIES=3

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/finagent?sslmode=disable
DATABASE_MAX_CONNECTIONS=25
DATABASE_MAX_IDLE_CONNECTIONS=5

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=1h

# Vector Store Configuration
VECTOR_STORE_PROVIDER=pgvector
VECTOR_STORE_URL=postgresql://user:password@localhost:5432/finagent?sslmode=disable
EMBEDDING_DIMENSION=1536
SIMILARITY_METRIC=cosine

# Qdrant Configuration (alternative vector store)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Agent Configuration
AGENT_MAX_STEPS=5
AGENT_TIMEOUT=5m
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=2000
ENABLE_MEMORY=true
ENABLE_CACHING=true

# Observability
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_PORT=9090
ENABLE_TRACING=true
ENABLE_METRICS=true
LOG_LEVEL=info

# Security
JWT_SECRET=your-jwt-secret-here
API_KEY=your-api-key-here
ENABLE_AUTH=true
RATE_LIMIT_PER_MINUTE=60

# Application
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0

# Financial Services Configuration
FRAUD_DETECTION_THRESHOLD=0.7
RISK_ASSESSMENT_MODEL=v2
COMPLIANCE_MODE=strict

# Feature Flags
ENABLE_STREAMING=true
ENABLE_FUNCTION_CALLING=true
ENABLE_WORKFLOW_ENGINE=true
ENABLE_EVALUATION=true

