# GO-PRO Security Configuration
# Copy this file to .env and configure your values

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-in-production-min-32-chars-length
JWT_ISSUER=go-pro-api
JWT_AUDIENCE=go-pro-users

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://your-domain.com

# Rate Limiting
RATE_LIMIT_RPM=100
RATE_LIMIT_BURST=10

# Admin API Key
ADMIN_API_KEY=your-secure-admin-api-key-change-in-production-12345678

# HTTPS Configuration
HTTPS_ENABLED=false
HTTPS_REDIRECT=false
TLS_CERT_FILE=/path/to/cert.pem
TLS_KEY_FILE=/path/to/key.pem

# Logging
LOG_LEVEL=INFO
LOG_SENSITIVE_DATA=false

# Development Settings (DO NOT USE IN PRODUCTION)
DEV_MODE=true
DISABLE_AUTH=false  # Only for testing - NEVER set to true in production